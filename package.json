{
  "name": "crwn-clothing-server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn run dev",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install && npm run build"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "serve-static": "^1.14.2",
    "stripe": "^8.202.0",
    "vite": "^2.7.13"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
